<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration    
      PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN"    
      "http://ibatis.apache.org/dtd/ibatis-3-config.dtd">     
<configuration>

	<properties resource="jdbc.properties" />
	
	<!-- 改变Ibatis运行时的行为 -->   
	<settings>   
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="false" /> 
		<setting name="multipleResultSetsEnabled" value="true" />
		<setting name="useColumnLabel" value="true" />
		<setting name="useGeneratedKeys" value="false" />
		<setting name="defaultExecutorType" value="SIMPLE" />
		<setting name="defaultStatementTimeout" value="25000" />
	</settings>
	   
	<typeAliases>
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApAdminUser" alias="apAdminUser" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApOrder" alias="apOrder" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApFile" alias="apFile" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApOrderLog" alias="apOrderLog" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApSupplier" alias="apSupplier" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApSysDic" alias="apSysDic" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApCity" alias="apCity" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApSendSms" alias="apSendSms" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApUserViewApartment" alias="apUserViewApartment" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApUserInfo" alias="apUserInfo" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApRelationUser" alias="ApRelationUser" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApBlackList" alias="ApBlackList" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApOrderSendGift" alias="apOrderSendGift" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApActivity" alias="apActivity" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApOrderGift" alias="apOrderGift" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApApartmentSchool" alias="ApApartmentSchool" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApChannel" alias="ApChannel" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApSchool" alias="ApSchool" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApBook" alias="ApBook" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApBookLog" alias="ApBookLog" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApRegisterUser" alias="ApRegisterUser" />
		<typeAlias type="com.horizon.api.mall.apartment.entity.ApCountry" alias="ApCountry" />
		
	</typeAliases>
	
	<environments default="apartmentWrite">   
		<environment id="apartmentReader">   
			<transactionManager type="JDBC"/>   
			<dataSource type="POOLED" >     
				<property name="driver" value="${jdbc.mall_apartment.driverClass}"/>    
				<property name="url" value="${jdbc.mall_apartment.reader.url}"/>   
				<property name="username" value="${jdbc.mall_apartment.reader.username}" />
				<property name="password" value="${jdbc.mall_apartment.reader.password}" />    
				<property name="poolMaximumActiveConnections" value="10"/>
				<property name="poolMaximumIdleConnections" value="5"/>
				<property name="poolMaximumCheckoutTime" value="20000"/>
				<property name="poolTimeToWait" value="20000"/>
				<property name="poolPingConnectionsNotUsedFor" value="0"/>
				<property name="poolPingQuery" value="select 1"/>
				<property name="poolPingEnabled" value="true"/>
			</dataSource>   
		</environment>
		<environment id="apartmentWrite">   
			<transactionManager type="JDBC"/>   
			<dataSource type="POOLED" >     
				<property name="driver" value="${jdbc.mall_apartment.driverClass}"/>    
				<property name="url" value="${jdbc.mall_apartment.write.url}"/>   
				<property name="username" value="${jdbc.mall_apartment.write.username}" />
				<property name="password" value="${jdbc.mall_apartment.write.password}" />    
				<property name="poolMaximumActiveConnections" value="10"/>
				<property name="poolMaximumIdleConnections" value="5"/>
				<property name="poolMaximumCheckoutTime" value="20000"/>
				<property name="poolTimeToWait" value="20000"/>
				<property name="poolPingConnectionsNotUsedFor" value="0"/>
				<property name="poolPingQuery" value="select 1"/>
				<property name="poolPingEnabled" value="true"/>
			</dataSource>   
		</environment>
	</environments>
	
	<mappers>   
		<mapper resource="mapper/ApAdminUserMapper.xml"/>
		<mapper resource="mapper/ApOrderMapper.xml"/>
		<mapper resource="mapper/ApFileMapper.xml"/>
		<mapper resource="mapper/ApOrderLogMapper.xml"/>
		<mapper resource="mapper/ApPayLogMapper.xml"/>
		<mapper resource="mapper/ApAdminUserMapper.xml"/>
		<mapper resource="mapper/ApOrderMapper.xml"/>
		<mapper resource="mapper/ApApartmentExtMapper.xml"/>
		<mapper resource="mapper/ApApartmentHouseMapper.xml"/>
		<mapper resource="mapper/ApApartmentImagesMapper.xml"/>
		<mapper resource="mapper/ApApartmentMapper.xml"/>
		<mapper resource="mapper/ApSupplierMapper.xml"/>
		<mapper resource="mapper/ApSysDicMapper.xml"/>
		<mapper resource="mapper/ApCityMapper.xml"/>
		<mapper resource="mapper/ApSendSmsMapper.xml"/>
		<mapper resource="mapper/ApUserViewApartmentMapper.xml"/>
		<mapper resource="mapper/ApUserInfoMapper.xml"/>
		<mapper resource="mapper/ApRelationUserMapper.xml"/>
		<mapper resource="mapper/ApBlackListMapper.xml"/>
		<mapper resource="mapper/ApOrderSendGiftMapper.xml"/>
		<mapper resource="mapper/ApActivityMapper.xml"/>
		<mapper resource="mapper/ApOrderGiftMapper.xml"/>
		<mapper resource="mapper/ApApartmentSchoolMapper.xml"/>
		<mapper resource="mapper/ApChannelMapper.xml"/>
		<mapper resource="mapper/ApSchoolMapper.xml"/>
		<mapper resource="mapper/ApOrderSettlementMapper.xml"/>
		<mapper resource="mapper/ApBookLogMapper.xml"/>
		<mapper resource="mapper/ApBookMapper.xml"/>
		<mapper resource="mapper/ApEarlyBirdMapper.xml"/>
		<mapper resource="mapper/ApEarlyBirdLogMapper.xml"/>
		<mapper resource="mapper/ApRegisterUserMapper.xml"/>
			<mapper resource="mapper/ApCountryMapper.xml"/>
	</mappers>   
</configuration>     